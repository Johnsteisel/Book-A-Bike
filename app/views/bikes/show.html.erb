<div class="container ">
  <div class="d-flex flex-row">
    <div class="mr-3">
      <% if @bike.photo.key %>
        <%= cl_image_tag @bike.photo.key, alt: @bike.name, class: "bike-img" %>
      <% else %>
        <%= image_tag "bike-icon.png", alt: "default bike picture", class: "bike-img" %>
      <% end %>
    </div>
    <div class="mt-3 flex-grow-1">
      <div class="d-flex justify-content-between">
        <div class="d-flex align-items-baseline">
          <h2><%= @bike.name.capitalize %></h2>
          <% if @bike.avg_rating != nil %>
            <h3> - <%= @bike.avg_rating %> ⭐</h3>
          <% end %>
        </div>
        <h1><%= @bike.price_per_day %>€/day</h1>
      </div>
      <h3><strong>Owner: </strong></h3>
      <div class="d-flex align-items-center my-3">
        <%= image_tag "avatar-icon.jpg", alt: "profile picture", class: "avatar" %>
        <h4 class="pt-2 mx-2"><%= @bike.user.username.capitalize %></h4>
      </div>
      <h3><strong>Category: </strong></h3>
      <h4><%= @bike.category.capitalize %></h4>
    </div>
  </div>
  <h3><strong>Description: </strong></h3>
  <p><%= @bike.description %></p>
  <%= link_to 'Confirm booking', class: 'btn btn-primary w-100' %>

  <%= simple_form_for [@bike, @booking] do |f| %>
    <%= f.input :start_time,
              as: :string,
              input_html: { data: { controller: "datepicker" } }%>
    <%= f.input :end_time,
              as: :string,
              input_html: { data: { controller: "datepicker" } } %>
    <%= f.submit %>
  <% end %>
  <div style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-marker-value="<%= @marker.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
