<div class="container ">
  <div class="d-flex flex-row">
    <div class="mx-3">
      <% if @bike.photo.key %>
        <%= cl_image_tag @bike.photo.key, alt: @bike.name, class: "bike-img" %>
      <% else %>
        <%= image_tag "bike-icon.png", alt: "default bike picture", class: "bike-img" %>
      <% end %>
    </div>
    <div class="mt-3 flex-grow-1">
      <div class="d-flex justify-content-between">
        <div class="d-flex align-items-baseline">
          <h2><%= @bike.name.capitalize %></h2>
          <% if @bike.avg_rating != nil %>
            <h3> - <%= @bike.avg_rating %> ⭐</h3>
          <% end %>
        </div>
        <h1><%= @bike.price_per_day %>€/day</h1>
      </div>
      <h3><strong>Owner: </strong></h3>
      <div class="d-flex align-items-center my-3">
        <%= image_tag "avatar-icon.jpg", alt: "profile picture", class: "avatar" %>
        <h4 class="pt-2 mx-2"><%= @bike.user.username.capitalize %></h4>
      </div>
      <h3><strong>Category: </strong></h3>
      <h4><%= @bike.category.capitalize %></h4>
    </div>
  </div>

  <div class='d-flex justify-content-between align-items-start'>
    <div>
      <h3><strong>Description: </strong></h3>
      <p><%= @bike.description %></p>
      <%= simple_form_for [@bike, @booking] do |f| %>
        <%= f.input :start_time,
                  as: :string,
                  input_html: { data: { controller: "datepicker" }, class: 'bg-info w-100' }%>
        <%= f.input :end_time,
                  as: :string,
                  input_html: { data: { controller: "datepicker" }, class: 'bg-info w-100' } %>
        <%= f.submit 'Create booking', class: 'btn btn-primary' %>
      <% end %>
    </div>

    <div style="width: 400px; height: 400px;"
      data-controller="map"
      data-map-marker-value="<%= @marker.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>

  <div class="btn-edit py-2">
    <% if current_user == @bike.user %>
      <%= link_to 'Edit My Bike', edit_bike_path(@bike) , class: "btn btn-dark"%>
    <% end %>
  </div>
  <div class="btn-delete py-2">
    <% if current_user == @bike.user %>
      <%= link_to 'Delete', bike_path(@bike) , data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %>
    <% end %>
  </div>
  <div>
    <%= link_to 'Confirm booking', class: 'btn btn-primary w-100' %>
  </div>


  <% unless (@bike.bookings.where("user_id = ? AND end_time < ?", current_user, Time.now).length == 0) || (@bike.reviews.where("user_id = ?", current_user).length != 0) %>
    <%= render "reviews/form", bike: @bike, review: @review %>
  <% end %>

  <h2 class="mt-3">Reviews</h2>
  <% if @bike.reviews.count == 0 %>
    <p>No reviews yet.</p>
  <% else %>
    <%= render partial: 'reviews/display', collection: @bike.reviews, as: :review %>
  <% end %>
</div>
