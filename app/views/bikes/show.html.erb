<%= render "shared/back" %>
<div class="container-show">
    <div class="text-center bike-img">
      <% if @bike.photo.key %>
        <%= cl_image_tag @bike.photo.key, alt: @bike.name, class: "bike-img", class: 'bike-img' %>
      <% else %>
        <%= image_tag "bike-icon.png", alt: "default bike picture", class: "bike-img" %>
      <% end %>
    </div>
  <div class="show-card">
    <div class="d-flex justify-content-between">
      <h1 class="text-center"><strong><%= @bike.name.capitalize %></strong></h1>
      <div>
        <% if @bike.avg_rating != nil %>
          <h3> <%= @bike.avg_rating %> ⭐</h3>
        <% end %>
      </div>
    </div>
      <div class="d-flex justify-content-between">
        <div>
          <h4 class="font-weight-light"><%= @bike.user.username.capitalize %></h4>
          <h4><%= @bike.category.capitalize %></h4>
        </div>
        <h1><%= @bike.price_per_day %>€/day</h1>
      </div>
      <p class="text-break"><%= @bike.description %></p>
      <div class="d-flex justify-content-end">
        <% if current_user == @bike.user %>
          <div class="d-flex gap-2">
            <div class="btn-edit py-2">
              <%= link_to 'Edit My Bike', edit_bike_path(@bike) , class: "btn btn-secondary"%>
            </div>
            <div class="btn-delete py-2">
              <%= link_to 'Delete', bike_path , data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger text-white" %>
            </div>
          </div>
        <% end %>
      </div>
  </div>
  <div style="width: 100%; height: 300px; margin-top: 20px; border-radius: 10px; box-shadow: 0px 0px 6px rgba(0,0,0, 0.3);"
    data-controller="map"
    data-map-marker-value="<%= @marker.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <div class="show-card">
    <h3>Book this bike!</h3>
    <div class="d-flex">
      <%= simple_form_for [@bike, @booking] do |f| %>
        <div class="d-flex">
          <div>
            <%= f.input :start_time,
                      as: :string,
                      input_html: { data: { controller: "datepicker" }, class: 'bg-info' }%>
          </div>
          <div class="mx-4">
            <%= f.input :end_time,
                      as: :string,
                      input_html: { data: { controller: "datepicker" }, class: 'bg-info' } %>
          </div>
        </div>
        <div>
          <%= f.submit 'Create booking', class: 'btn btn-secondary' %>
        </div>
      <% end %>
  </div>
  </div>

  <% unless (@bike.bookings.where("user_id = ? AND end_time < ?", current_user, Time.now).length == 0) || (@bike.reviews.where("user_id = ?", current_user).length != 0) %>
    <%= render "reviews/form", bike: @bike, review: @review %>
  <% end %>

  <h2 class="mt-3">Reviews</h2>
  <% if @bike.reviews.count == 0 %>
    <p class="mb-3">No reviews yet.</p>
  <% else %>
    <%= render partial: 'reviews/display', collection: @bike.reviews, as: :review %>
  <% end %>
</div>
