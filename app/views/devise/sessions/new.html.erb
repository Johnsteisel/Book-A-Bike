<div class="container my-3">
  <div class="mx-auto" style="width: 30rem">
    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :login,
                    required: false,
                    label: 'Email or Username',
                    autofocus: true,
                    input_html: { autocomplete: "login", class: "bg-info" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "bg-info" } %>
        <%= f.input :remember_me, input_html: { class: "bg-dark" }, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-dark" %>
      </div>
    <% end %>

    <div class="py-2">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
