<%= render "shared/back" %>
<div class="container">
  <div class="mx-auto" style="width: 30rem">
    <div class="text-center">
      <h2>Sign Up</h2>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :username,
                    required: true,
                    input_html: { autocomplete: "username", class: "bg-info" }%>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "bg-info" }%>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", class: "bg-info" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password", class: "bg-info" } %>
      </div>

      <div class="my-3form-actions text-center rounded">
        <%= f.button :submit, "Sign Up", class: "btn btn-dark" %>
      </div>
    <% end %>

    <div class="my-2 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
